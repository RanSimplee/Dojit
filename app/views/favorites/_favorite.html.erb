<% if policy(Favorite.new).create? %>
  <div class="favorite">
    <% if current_user.is_favorited(post) %>
      <%= link_to post_favorite_path(post, current_user), class: 'btn btn-danger', method: :delete do %>
        <i class="glyphicon glyphicon-star-empty"> </i>&nbsp; Unfavorite
      <% end %>
    <% else %>
      <%= link_to post_favorites_path(post), class: 'btn btn-primary', method: :post do %>
        <i class="glyphicon glyphicon-star"> </i>&nbsp; Favorite
      <% end %>
    <% end %>
  </div>
<% end %>